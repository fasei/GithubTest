<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sweet_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zt.wc.githubtest.ui.SweetDialogActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="完整显示——可取消" />

        <Button
            android:id="@+id/only_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="仅显示文字" />

        <Button
            android:id="@+id/only_content_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="仅显示标题和内容" />

        <Button
            android:id="@+id/only_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="仅显示异常" />

        <Button
            android:id="@+id/only_warm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="仅显示警告" />

        <Button
            android:id="@+id/only_success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="仅显示成功" />
        <Button
            android:id="@+id/my_self"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自定义的" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="什么都没有的" />

    </LinearLayout>

</ScrollView>
